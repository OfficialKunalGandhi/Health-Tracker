<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeholder"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="20dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/RetroImageView"
            android:layout_width="144dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:background="@color/shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.38" />

        <TextView
            android:id="@+id/RetroTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/averia_sans_libre"
            android:maxLines="2"
            android:background="@color/shimmer"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/RetroImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/RetroTextDiscrip"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@color/shimmer"
            android:backgroundTint="@color/shimmer"
            android:ellipsize="end"
            android:fontFamily="@font/cabin"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="@+id/RetroTextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/RetroTextView"
            app:layout_constraintTop_toBottomOf="@+id/RetroTextView" />

        <ImageView
            android:id="@+id/likeButtonOnCard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:background="@color/shimmer"
            android:backgroundTint="@color/shimmer"
            app:layout_constraintEnd_toEndOf="@+id/likeButtonOnCardLikeNumber"
            app:layout_constraintStart_toStartOf="@+id/likeButtonOnCardLikeNumber"
            app:layout_constraintTop_toBottomOf="@+id/RetroTextDiscrip"
             />

        <TextView
            android:id="@+id/likeButtonOnCardLikeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer"
            android:text="100"
            android:textAlignment="center"
            android:textColor="@color/shimmer"
            app:layout_constraintStart_toStartOf="@+id/RetroTextDiscrip"
            app:layout_constraintTop_toBottomOf="@+id/likeButtonOnCard" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@+id/timerTime"
            app:layout_constraintStart_toStartOf="@+id/timerTime"
            app:layout_constraintTop_toBottomOf="@+id/RetroTextDiscrip"
            android:background="@color/shimmer" />

        <TextView
            android:id="@+id/timerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer"
            android:text="100"
            android:textAlignment="center"
            android:textColor="@color/shimmer"
            app:layout_constraintEnd_toStartOf="@+id/VegChecker"
            app:layout_constraintStart_toEndOf="@+id/likeButtonOnCardLikeNumber"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/VegChecker"
            app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintStart_toStartOf="@+id/VegChecker"
            app:layout_constraintTop_toBottomOf="@+id/RetroTextDiscrip"
            android:background="@color/shimmer" />

        <TextView
            android:id="@+id/VegChecker"
            android:layout_width="58dp"
            android:layout_height="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:background="@color/shimmer"
            android:text="100"
            android:textAlignment="center"
            android:textColor="@color/shimmer"
            app:layout_constraintEnd_toEndOf="@+id/RetroTextDiscrip"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>